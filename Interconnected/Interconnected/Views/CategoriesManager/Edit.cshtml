@using Interconnected.Models.Entity
@model CATEGORy
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<div class="page_container">
    <div class="breadcrumb">
        <div class="wrap">
            <div class="container">
                <a href="@Url.Action("Index", "Home")">Trang chủ</a><span>/</span>
                <a href="@Url.Action("Index", "CategoriesManager")">Quản lý chủ đề</a><span>/</span>Sửa chủ đề
            </div>
        </div>
    </div>
    <!--MAIN CONTENT AREA-->
    <div class="wrap">
        <div class="container inner_content">
            <div class="row">
                <div class="span8">
                    <form action="" method="post" class="form-horizontal">
                        @Html.AntiForgeryToken()
                        <fieldset>
                            <legend>Sửa chủ đề</legend>
                            <div class="control-group">
                                <label class="control-label" for="NAME">NAME</label>
                                <div class="controls">
                                    <input style="padding: 4px 0px;" name="NAME" class="input-xlarge focused" id="NAME" type="text" value="@Model.NAME">
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" for="DESCRIPTION">DESCRIPTION</label>
                                <div class="controls">
                                    <textarea name="DESCRIPTION" class="input-xlarge" id="DESCRIPTION" rows="5">@Model.DESCRIPTION</textarea>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" for="ListParent">PARENT</label>
                                <div class="controls">
                                    <select class="ListParent input-xlarge" name="ID_PARENT" id="ListParent">
                                        <option value="0">No parent</option>
                                        @foreach (CATEGORy Item in ViewBag.ListCategories)
                                        {
                                            if (Model.ID != Item.ID)
                                            {
                                                string sl = "";
                                                if (Model.ID_PARENT == Item.ID)
                                                {
                                                    sl = "selected='selected'";
                                                }
                                                <option @sl value="@Item.ID">@Item.NAME</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="form-actions">
                                <button type="submit" class="btn send_btn">Edit</button>
                                <button type="reset" class="btn dark_btn">Reset</button>
                            </div>
                        </fieldset>
                    </form>
                </div>

                <div class="span4">
                    <h3>Thêm chủ đề mới</h3>
                    <p>Điền đầy đủ thông tin</p>
                </div>
            </div>
        </div>
    </div>
    <!--/MAIN CONTENT AREA-->

</div>

